<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignUpOneActivity"
        android:orientation="vertical">

    <!--나중에 밑에 RelativeLayout -> LinearLayout으로 변경하기!-->

    <RelativeLayout
            android:layout_above="@+id/signUpOneNextBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp">

        <ImageView
                android:id="@+id/signUpOneXBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:src="@drawable/x_btn"/>


        <TextView
                android:id="@+id/signUpIntroduceText"
                android:layout_below="@+id/signUpOneXBtn"
                android:layout_marginTop="30.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="11sp"
                android:textStyle="bold"
                android:text="DMZing의 \n가족이 되어주세요!"
        />

        <TextView
                android:id="@+id/signUpIntroduceNickNameText"
                android:layout_below="@+id/signUpIntroduceText"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                android:text="이름과 디엠징에서 사용할 닉네임을 알려주세요."
        />


        <TextView
                android:id="@+id/signUpOneNameText"
                android:layout_below="@+id/signUpIntroduceNickNameText"
                android:layout_marginTop="42dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="이름*"
        />

        <EditText
                android:id="@+id/signUpOneName"
                android:layout_below="@+id/signUpOneNameText"
                android:layout_marginTop="28dp"
                android:hint="이름"
                android:textColor="#1c3748"
                android:textSize="16sp"
                android:layout_width="284dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/signUpOneNickNameText"
                android:layout_below="@+id/signUpOneName"
                android:layout_marginTop="39.5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="닉네임*"
        />

        <EditText
                android:layout_below="@+id/signUpOneNickNameText"
                android:layout_marginTop="28dp"
                android:hint="닉네임"
                android:textColor="#1c3748"
                android:textSize="16sp"
                android:layout_width="284dp"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/signUpOneNextBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6da8c7"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="다음"
                android:layout_centerInParent="true"
                android:textStyle="bold"
        />

    </RelativeLayout>


</RelativeLayout>