<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignUpActivity">

    <RelativeLayout
            android:id="@+id/signUpToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        <RelativeLayout
                android:id="@+id/signUpXBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x_btn"/>

        </RelativeLayout>


    </RelativeLayout>

    <ScrollView
            android:layout_below="@+id/signUpToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:id="@+id/signUpOneTextLayout"
                    android:layout_below="@+id/signUpOneXBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <TextView
                            android:id="@+id/signUpIntroduceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#1c3748"
                            android:lineSpacingExtra="11sp"
                            tools:text="DMZing"
                            android:fontFamily="@font/notosanscjkkr_bold"
                            android:includeFontPadding="false"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#1c3748"
                            android:lineSpacingExtra="11sp"
                            tools:text="의"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                    />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#1c3748"
                            android:lineSpacingExtra="11sp"
                            android:fontFamily="@font/notosanscjkkr_bold"
                            android:includeFontPadding="false"
                            tools:text="가족"
                    />

                    <TextView
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#1c3748"
                            android:lineSpacingExtra="11sp"
                            tools:text="이 되어주세요!"
                    />


                </LinearLayout>


            </LinearLayout>


            <TextView
                    android:id="@+id/signUpTextLine"
                    android:layout_below="@+id/signUpOneTextLayout"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginLeft="36dp"
                    android:text="간단한 절차로 디엠징의 회원이 되어보세요!"
            />

            <TextView
                    android:id="@+id/signUpEmailText"
                    android:layout_below="@+id/signUpTextLine"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="42dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="8sp"
                    android:text="이메일*"
            />

            <EditText
                    android:layout_below="@+id/signUpEmailText"
                    android:id="@+id/signUpEmail"
                    android:layout_marginHorizontal="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:gravity="start"
                    android:layout_marginTop="27dp"
                    android:hint="예) hwang@dmzing.com"
            />

            <TextView
                    android:id="@+id/emailCheckText"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/signUpEmail"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6da8c7"
                    android:lineSpacingExtra="6sp"
                    android:text="유효한 이메일이 아닙니다."
            />


            <TextView
                    android:id="@+id/signUpPwText"
                    android:layout_below="@+id/emailCheckText"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="42dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="8sp"
                    android:text="비밀번호 *"
            />

            <TextView
                    android:layout_below="@+id/signUpPwText"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#b2b2b2"
                    android:lineSpacingExtra="6sp"
                    android:text="(특수문자,영문,숫자 포함)"
            />

            <EditText
                    android:id="@+id/signUpPw"
                    android:layout_below="@+id/signUpPwText"
                    android:layout_marginHorizontal="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:gravity="start"
                    android:layout_marginTop="27dp"
                    android:hint="비밀번호를 입력해 주세요"
            />

            <TextView
                    android:id="@+id/signUpPwTv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/signUpPw"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6da8c7"
                    android:lineSpacingExtra="6sp"
                    android:text="특수문자,영문,숫자를 포함해 주세요."
            />


            <TextView
                    android:id="@+id/signUpPhoneText"
                    android:layout_below="@+id/signUpPwTv"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="42dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="8sp"
                    android:text="휴대폰번호 *"
            />


            <EditText
                    android:id="@+id/signUpPhone"
                    android:layout_below="@+id/signUpPhoneText"
                    android:layout_marginHorizontal="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:gravity="start"
                    android:layout_marginTop="27dp"
                    android:hint="'-'를 제외한 번호를 입력해주세요"
            />

            <TextView
                    android:id="@+id/signUpPhoneTv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/signUpPhone"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6da8c7"
                    android:lineSpacingExtra="6sp"
                    android:text="유효한 전화번호가 아닙니다."
            />

            <RelativeLayout
                    android:id="@+id/signUpNickLayout"
                    android:layout_marginTop="38dp"
                    android:layout_below="@+id/signUpPhoneTv"
                    android:layout_width="match_parent"

                    android:layout_height="48dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#1c3748"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36dp"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:text="닉네임 *"
                />

            </RelativeLayout>

            <EditText
                    android:id="@+id/signUpNickname"
                    android:layout_below="@+id/signUpNickLayout"
                    android:layout_marginHorizontal="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:gravity="start"
                    android:layout_marginTop="27dp"
                    android:hint="닉네임을 입력해주세요"
            />

            <RelativeLayout
                    android:id="@+id/signUpCompleteBtn"
                    android:layout_marginTop="64dp"
                    android:layout_below="@+id/signUpNickname"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="@color/mainColor"
                    android:layout_height="60dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="완료"
                />

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>