<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f4f6f8"
    android:orientation="vertical"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:background="@drawable/course_border"
        android:layout_width="150dp"
        android:layout_height="208.2dp"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/photo_review_item_image"
            android:layout_width="135dp"
            android:layout_height="138.8dp"
            android:layout_marginTop="8.3dp"
            android:layout_marginLeft="7.2dp"
            android:background="#e3e3e3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/photo_review_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.6dp"
                android:layout_marginTop="11.6dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_medium"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textColor="#1c3748"
                android:text="2018.08.01"
                />

            <ImageView
                android:id="@+id/photo_review_item_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/review_picture_more_btn" />


        </RelativeLayout>

        <TextView
            android:id="@+id/photo_review_item_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="7.6dp"
            android:layout_marginTop="2.7dp"
            android:textSize="14sp"
            android:textColor="#1c3748"
            android:layout_gravity="center_vertical"
            android:text="장소 이름"
            />
    </LinearLayout>

</LinearLayout>