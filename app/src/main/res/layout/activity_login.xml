<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:orientation="vertical">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <ImageView
                    android:layout_marginTop="91dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="92dp"
                    android:layout_height="74dp"
                    android:background="@drawable/login_dmzing_logo"/>

            <TextView
                    android:layout_marginHorizontal="36dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="84dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:text="이름"
            />

            <EditText
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="28dp"
                    android:hint="@string/signUpId"
                    android:id="@+id/loginId"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginHorizontal="36dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="39.5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:text="비밀번호"
            />

            <EditText
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="28dp"
                    android:hint="@string/signUpPw"
                    android:id="@+id/loginPw"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:layout_marginHorizontal="54dp"
                    android:layout_marginTop="47.5dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/loginBtn"
                    android:background="@drawable/border_blue_button_templete"
                    android:text="로그인 하기"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="로그인 하기"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/notosanscjkkr_bold"
                        android:includeFontPadding="false"
                />


            </RelativeLayout>

            <TextView
                    android:layout_marginTop="23dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:text="아직 디엠징의 회원이 아니신가요?"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                <TextView
                        android:id="@+id/loginToSignBtn"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1c3748"
                        android:lineSpacingExtra="6sp"
                />
                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1c3748"
                        android:lineSpacingExtra="6sp"
                        android:text="  하기"
                />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>