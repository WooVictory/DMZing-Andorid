<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:orientation="vertical">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <ImageView
                    android:layout_marginTop="47dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/holo_green_light"/>

            <TextView
                    android:layout_marginTop="52dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:text="이름"
            />

            <EditText
                    android:layout_marginTop="28dp"
                    android:hint="@string/signUp"
                    android:id="@+id/loginId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="39.5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="8sp"
                    android:text="비밀번호"
            />

            <EditText
                    android:layout_marginTop="28dp"
                    android:hint="@string/signUp"
                    android:id="@+id/loginPw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_marginTop="47.5dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/loginBtn"
                    android:src="@drawable/login_btn_selector"
                    android:text="로그인 하기"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="23dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    tools:text="아직 디엠징의 회원이 아니신가요?"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                <TextView
                        android:id="@+id/loginToSignBtn"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1c3748"
                        android:lineSpacingExtra="6sp"
                />
                <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1c3748"
                        android:lineSpacingExtra="6sp"
                        android:text="  하기"
                />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>