<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.mypage.faq.FAQActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@color/backgroundColor">


        <RelativeLayout
                android:id="@+id/faqXBtn"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_margin="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x_btn"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/faqText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="12sp"
                android:text="FAQ"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="86dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
        />

        <TextView
                android:layout_below="@+id/faqText"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                android:text="디엠징에 대해 궁금한 점들을 알려드릴게요!"
        />


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#f4f6f8"
            android:layout_weight="2.8">

        <RelativeLayout
                android:id="@+id/faqOneAnswer"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="56dp">

            <TextView
                    android:id="@+id/faqNumOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:text="01."
                    android:layout_marginLeft="21dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
            />

            <TextView
                    android:layout_toRightOf="@+id/faqNumOne"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:text="디엠징은 어떤 앱인가요?"
            />

            <ImageView
                    android:id="@+id/faqOneMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24.4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_faq_more_icon"/>

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dddddd"/>

        <TextView
                android:id="@+id/fqaOneAnswerText"
                android:paddingHorizontal="21dp"
                android:paddingVertical="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="110dp"/>

        <RelativeLayout
                android:id="@+id/faqTwoAnswer"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="56dp">

            <TextView
                    android:id="@+id/faqNumTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:text="02."
                    android:layout_marginLeft="21dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
            />

            <TextView
                    android:layout_toRightOf="@+id/faqNumTwo"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:text="DP는 어떻게 사용하는 건가요?"
            />

            <ImageView
                    android:id="@+id/faqTwoMore"
