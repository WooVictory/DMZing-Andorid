<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="336dp" android:layout_height="560dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/letterImageItem"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/letter_complete_img"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="20dp"
                android:text="데이트하기 좋은 코스"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="12sp"
                android:text="편지 미션 성공!"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="미션을 모두 성공했어요!"
                android:layout_marginTop="42dp"
                android:layout_gravity="center_horizontal"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="하단의 버튼을 통해"
                android:layout_gravity="center_horizontal"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                android:gravity="center_horizontal"
                android:text="더 다양한 미션을 만나보세요!"
        />


        <View
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:background="@color/viewColor"/>

