<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignUpTwoActivity">

    <LinearLayout
            android:layout_above="@+id/signUpTwoNextBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="36dp">


        <ImageView
                android:id="@+id/signUpTwoXBtn"
                android:layout_marginTop="13dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x_btn"/>

        <TextView
                android:layout_marginTop="30.3dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="11sp"
                android:text="DMZing의 \n가족이 되어주세요!"
        />

        <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="6sp"
                tools:text="전화 번호 및 이메일을 입력해주세요.(선택)"
        />

        <TextView
                android:layout_marginTop="42dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="휴대폰번호"
        />

        <EditText
                android:layout_width="283.5dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:gravity="start"
                android:layout_marginTop="28dp"
                android:hint="휴대폰 번호"
        />
        <TextView
                android:layout_marginTop="39.5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="이메일"
        />

        <EditText
                android:layout_width="283.5dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="28dp"
                android:inputType="textEmailAddress"
                android:hint="이메일"
        />



    </LinearLayout>


    <RelativeLayout
            android:id="@+id/signUpThreeNextBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6da8c7"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="다음"
                android:layout_centerInParent="true"
                android:textStyle="bold"
        />

    </RelativeLayout>

</RelativeLayout>