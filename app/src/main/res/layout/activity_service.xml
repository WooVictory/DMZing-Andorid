<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.mypage.setting.ServiceActivity"
        android:orientation="vertical">


    <RelativeLayout
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="54dp">

        <RelativeLayout
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_btn"/>
        </RelativeLayout>

        <TextView
                android:layout_centerInParent="true"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="9sp"
                android:text="서비스 정보"
        />

        <RelativeLayout

                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="26dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/x_btn"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/serviceDMZingBtn"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="DMZING 안내"
        />

        <ImageView
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_course_review_more_icon"/>


    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>

    <RelativeLayout
            android:id="@+id/serviceTermsBtn"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="이용약관"
        />

        <ImageView
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_course_review_more_icon"/>


    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>

    <RelativeLayout
            android:id="@+id/servicePolicyBtn"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1c3748"
                android:lineSpacingExtra="8sp"
                android:text="개인정보 보호정책"
        />

        <ImageView
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_course_review_more_icon"/>


    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>

    <RelativeLayout
            android:background="#29707070"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>