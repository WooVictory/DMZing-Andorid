<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp" android:layout_height="170dp">

    <TextView
        android:id="@+id/dialog_course_order_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이트하기 좋은 코스"
        android:textSize="18sp"
        android:textColor="#1C3748"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:includeFontPadding="false"
        android:layout_above="@+id/dialog_course_order_result_text"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dialog_course_order_result_title"
        android:layout_above="@+id/dialog_course_order_result_text"
        android:text="를"
        android:textSize="18sp"
        android:textColor="#1C3748"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/dialog_course_order_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="구매하셨습니다!"
        android:textSize="18sp"
        android:textColor="#1C3748"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#6DA8C7"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_course_order_result_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="닫기"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"/>

    </LinearLayout>

</RelativeLayout>